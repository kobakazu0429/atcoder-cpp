BasedOnStyle:  Google

UseTab: Never
IndentWidth: 2
AccessModifierOffset: 0
AllowShortFunctionsOnASingleLine: None
AlwaysBreakTemplateDeclarations: false
NamespaceIndentation: All
AllowShortIfStatementsOnASingleLine: Always

ColumnLimit: 100 # default: 80
